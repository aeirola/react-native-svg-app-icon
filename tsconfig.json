{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./lib/",
    "rootDir": "./src/",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
